 * @author    Andrea Turso <andrea.turso@gmail.com>
 */
require_once __DIR__ . '/../src/bootstrap.php';

use Zend\Console\Getopt;
use Officine\Amaka\Amaka;
use Officine\Amaka\Context\CliContext;
use Officine\Amaka\FailedBuildException;
use Officine\Amaka\AmakaScript\AmakaScriptNotFoundException;
use Officine\Amaka\ErrorReporting\Trigger;
use Officine\Amaka\ErrorReporting\Reporter;

$print = function($string) {
    echo $string;
};
$printLine = function($line) {
    echo $line . PHP_EOL;
};

$reporter = new Reporter();
$reporter->setPrintFunction($print);
$reporter->setPrintLineFunction($printLine);

$getopt = new Getopt(array(
    'f=s'    => 'Load the specified amaka script',
    'list|l' => 'Prints the tasks in the amaka script',
    'init'   => "Create a new amaka script with a ':hello-world' task",
    'help|h' => 'Show this help screen',
));

$opts = $getopt;
$args = $getopt->getRemainingArgs();
$task = array_pop($args);

$scriptName = null;
// Let the user load a different amaka script with -f
if (isset($opts->f)) {
    $scriptName = $opts->f;
}

if (isset($opts->help)) {
    $printLine($opts->getUsageMessage());
    exit(0);
}

// Handle the creation of the new script
if (isset($opts->init)) {
    if (file_exists('Amkfile')) {
        $printLine("An 'Amkfile' is already present in this project. Doing nothing.");
    } else {
        $script = <<<AMK_SCRIPT
<?php
/**
  This is an example amaka script

  If your project has a 'tests/' directory and a 'phpunit.xml' file
  then you can run PHPUnit with 'amaka test'.
 */
return array(
    \$amaka->task(':hello-world', function() {
        echo "Hello World!" . PHP_EOL;
    }),
    \$amaka->task('test'),
);
AMK_SCRIPT;
            if (file_put_contents('Amkfile', $script)) {
                $printLine("The new 'Amkfile' script has been created successfully.");
                $printLine("Now you can run the hello world task with 'amaka :hello-world'");
            } else {
                $printLine("Could not create the 'Amkfile' script.");
            }
        }
        return;
    }

try {
    $context = new CliContext();
    $context->setParam('args', $args);

    $amaka = new Amaka('Amkfile', $context);
    $amaka->loadAmakaScript($scriptName);

    $printLine("(Loaded '{$amaka->getAmakaScript()}')");

    if (isset($opts->l)) {
        $script = $amaka->getAmakaScript();
        foreach ($script as $task) {
            $printLine($task->getName());
        }
        return;
    }

    if ($task) {
        $printLine("(Task '$task')");
    }
    $amaka->run($task);
} catch(Exception $e) {
    $reporter->handleException($e);
    exit(1);
}

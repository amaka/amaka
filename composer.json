{
    "name": "officine-software/amaka",
    "license": "BSD-3-Clause",
    "version": "v0.1.0-beta",
    "homepage": "http://github.com/trashofmasters/amaka",
    "description": "Amaka the PHP Build Automator",
    "keywords": ["phing alternatives", "build automation", "amaka"],
    "authors": [
        {
            "role": "Developer",
            "name": "Andrea Turso",
            "email": "trashofmasters@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3",
        "symfony/finder": "@stable",
        "phpunit/php-timer": "@stable",
        "behat/behat": "@stable",
        "phpunit/phpunit": "@stable",
        "zendframework/zendframework": "@stable"
    },
    "require-dev": {
        "phpmd/phpmd" : "1.4.*"
    },
    "suggest": {
        "symfony/finder": "To use the Symfony Finder component inside your Amaka Scripts"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.zendframework.com/"
        }
    ],
    "autoload": {
        "psr-0": {
            "Officine": "src/"
        }
    },
    "bin": ["bin/amaka"]
}
